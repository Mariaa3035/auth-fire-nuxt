# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true
# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
# JavaScript, Vue, and JSON files
[*.{js,vue,json}]
indent_style = space
indent_size = 2
max_line_length = 100
# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off
# Config files
[*.{yml,yaml,config.js}]
indent_style = space
indent_size = 2